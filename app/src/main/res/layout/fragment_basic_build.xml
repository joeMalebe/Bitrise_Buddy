<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.build.build_configuration.BasicBuildFragment">

    <Spinner
        android:id="@+id/spinner_branches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gutterSpace"
        android:layout_marginHorizontal="@dimen/gutterSpace"
        android:background="@color/colorPrimary"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/item_spinner_dropdown" />

    <Spinner
        android:id="@+id/spinner_workflows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/gutterSpace"
        android:background="@color/colorPrimary"
        android:spinnerMode="dropdown"
        tools:listitem="@layout/item_spinner_dropdown" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gutterSpace"
        android:hint="@string/message">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>