<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.app.bitrisebuddy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".BitriseBuddyApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitriseBuddy">

        <activity
            android:exported="false"
            android:name=".ui.build.BitriseAppsActivity"
            android:theme="@style/BitriseBuddyTheme" />

        <activity
            android:exported="false"
            android:name=".ui.build.BuildConfigurationActivity"
            android:theme="@style/BitriseBuddyTheme" />

        <activity
            android:label="@string/title_activity_build"
            android:name=".ui.build.BuildActivity"
            android:theme="@style/BitriseBuddyTheme" />

        <activity
            android:name=".ui.landing.LandingActivity"
            android:theme="@style/BitriseBuddyTheme" />

        <activity
            android:exported="true"
            android:name=".ui.login.LoginActivity"
            android:theme="@style/BitriseBuddyTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>